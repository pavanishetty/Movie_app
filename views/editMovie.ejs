<% include ./partials/header %>
<div class="ui main text container segment">
     <div class="ui huge header">Edit <%= movie.name %></div>
       <form class="ui form"  action="/movies/<%= movie._id %>?_method=PUT" method="POST">
         <div class="field">
             <label>Title</label>
             <input type="text" name="movie[name]" value="<%= movie.name %>">
         </div>
         <div class="field">
             <label>Image</label>
             <input type="text" name="movie[title]" value="<%= movie.title %>">
         </div>
         <div class="field">
             <label>Movie Description</label>
             <textarea name="movie[description]"><%- movie.description %></textarea>
         </div>
         <div class="field">
             <label>Year Released</label>
             <input  type="number" min="1800" max="2017" name="movie[year_released]" value="<%= movie.year_released %>">
         </div>
         <div class="field">
             <label>Rating</label>
             <input type="number" min="1" max="10" name="movie[rating]" value="<%= movie.rating %>">
         </div>
         <div class="field">
             <label>Actors</label>
             <input type="text" name="movie[actors_list]" value="<%= movie.actors_list %>">
         </div>
         <div class="field">
             <label>Directors</label>
             <input type="text" name="movie[directors_list]" value="<%= movie.directors_list %>">
         </div>
          <input class="ui violet big basic button" type="submit">
       </form>
</div>
<% include ./partials/footer %>
