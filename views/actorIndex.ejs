<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">ACTORS</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
           <% actors.forEach(function(actor){ %>
             <div class="item">
                 <div class="image">
                      <img src="<%= actor.image %>" >
                 </div>
                 <div class="content">
                     <a class="header" href="/actors/<%= actor._id%>"><%= actor.name %></a>
                     
                     <div class="description">
                           <p>Age:<%= actor.age %></p>
                           <p>Gender:<%= actor.gender %></p>
                     </div><br><br>
                     <div class="extra">
                        <a class="ui floated basic violet button" href="/actors/<%= actor._id%>">
                          Read More
                          <i class="pointing right icon"></i>
                        </a>
                     </div>
                 </div>
                 

                 </div>
                
          <% }) %>
        </div>
    </div>
    </div>
</div>


<% include ./partials/footer %>