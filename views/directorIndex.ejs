<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">DIRECTORS</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
           <% directors.forEach(function(director){ %>
             <div class="item">
                 <div class="image">
                      <img src="<%= director.image %>" >
                 </div>
                 <div class="content">
                     <a class="header" href="/directors/<%= director._id%>"><%= director.name %></a> 
                     <div class="description">
                           <p>Age:<%= director.age %></p>
                           <p>Gender:<%= director.gender %></p>
                     </div>    <br><br>
                     <div class="extra">
                        <a class="ui floated basic violet button" href="/directors/<%= director._id%>">
                          Read More
                          <i class="pointing right icon"></i>
                        </a>
                     </div>
                 </div>
                 

                 </div>
                
          <% }) %>
        </div>
    </div>
    </div>
</div>


<% include ./partials/footer %>