<% include ./partials/header %>
<div class="ui main text container segment">
     <div class="ui huge header">New Director</div>
       <form class="ui form" action="/directors" method="POST">
         <div class="field">
             <label>Title</label>
             <input type="text" name="director[name]" placeholder="title" required>
         </div>
         <div class="field">
             <label>Image</label>
             <input type="text" name="director[image]" placeholder="image" required>
         </div>
         <div class="field">
             <label>Age</label>
             <input type="number" min="1" max="125" name="director[age]" placeholder="age" required>
         </div>
         <div class="field">
             <label>Gender</label>
            <select name="director[gender]" >
                 <option  value="M">M</option>
                  <option  value="F">F</option>
             </select>             
         </div>
         <div class="field">
             <label>Movies Directed</label>
             <input type="text" name="director[movies_directed]" placeholder="movies directed">
         </div>
          <input class="ui violet big basic button" type="submit">
       </form>
</div>
<% include ./partials/footer %>
