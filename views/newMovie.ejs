<% include ./partials/header %>
<div class="ui main text container segment">
     <div class="ui huge header">New Movie</div>
       <form class="ui form" action="/movies" method="POST">
         <div class="field">
             <label>Title</label>
             <input type="text" name="movie[name]" placeholder="title" required>
         </div>
         <div class="field">
             <label>Image</label>
             <input type="text" name="movie[title]" placeholder="image" required>
         </div>
         <div class="field">
             <label>Movie Description</label>
             <textarea name="movie[description]"></textarea>
         </div>
         <div class="field">
             <label>Year Released</label>
             <input type="number" min="1800" max="2017" name="movie[year_released]" placeholder="year" required>
         </div>
         <div class="field">
             <label>Rating</label>
             <input type="number" min="1" max="10" name="movie[rating]" placeholder="rating" required>
         </div>
         <div class="field">
             <label>Actors List</label>
             <input type="text" name="movie[actors_list]" placeholder="actors" required>
         </div>
         <div class="field">
             <label>Directors List</label>
             <input type="text" name="movie[directors_list]" placeholder="directors" required>
         </div>
          <input class="ui violet big basic button" type="submit">
       </form>
</div>
<% include ./partials/footer %>
