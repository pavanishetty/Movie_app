<% include ./partials/header %>
<div class="ui main text container segment">
     <div class="ui huge header">Edit <%= director.name %></div>
       <form class="ui form"  action="/directors/<%= director._id %>?_method=PUT" method="POST">
         <div class="field">
             <label>Title</label>
             <input type="text" name="director[name]" value="<%= director.name %>">
         </div>
         <div class="field">
             <label>Image</label>
             <input type="text" name="director[image]" value="<%= director.image %>">
         </div>
         <div class="field">
             <label>Age</label>
             <textarea name="director[age]"><%= director.age %></textarea>
         </div>
         <div class="field">
             <label>Gender</label>
            <select name="director[gender]" value="<%= director.gender %>" >
                 <option  value="M">M</option>
                  <option  value="F">F</option>
             </select>                
         </div>
         <div class="field">
             <label>Movies Directed</label>
             <input type="text" name="director[movies_directed]" value="<%= director.movies_directed %>">
         </div>
          <input class="ui violet big basic button" type="submit">
       </form>
</div>
<% include ./partials/footer %>
