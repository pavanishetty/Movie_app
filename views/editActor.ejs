<% include ./partials/header %>
<div class="ui main text container segment">
     <div class="ui huge header">Edit <%= actor.name %></div>
       <form class="ui form"  action="/actors/<%= actor._id %>?_method=PUT" method="POST">
         <div class="field">
             <label>Title</label>
             <input type="text" name="actor[name]" value="<%= actor.name %>">
         </div>
         <div class="field">
             <label>Image</label>
             <input type="text" name="actor[image]" value="<%= actor.image %>">
         </div>
         <div class="field">
             <label>Age</label>
             <textarea name="actor[age]"><%= actor.age %></textarea>
         </div>
         <div class="field">
             <label>Gender</label>
            <select name="actor[gender]" value="<%= actor.gender %>">
                 <option  value="M">M</option>
                  <option  value="F">F</option>
             </select>             
         </div>
         <div class="field">
             <label>Movies Acted In</label>
             <input type="text" name="actor[movies_acted_in]" value="<%= actor.movies_acted_in %>">
         </div>
          <input class="ui violet big basic button" type="submit">
       </form>
</div>
<% include ./partials/footer %>
